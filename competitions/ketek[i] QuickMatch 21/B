#include <bits/stdc++.h>
using namespace std;

int main() 
{
	// your code goes here
    int n;cin>>n;
    int arr[n];
    for(int i=0;i<n;i++) cin>>arr[i];
    bool flag=0;
    for(int i=0;i<n-1;i++) 
    {
        if(arr[i]>=arr[i+1]) {flag=1;}
    }
    if(flag) cout<<"-1"<<endl;
    else{
        int minn=INT_MAX;
       for(int i=0;i<n-1;i++)
       {
           if(i%2==0)
           {minn=min(minn,arr[i+1]-arr[i]);}
       }
       cout<<(minn-1)/2<<endl;
    }
}
